.buttonGroup {
  width: 100%;
  height: 100%;
  position: absolute;
}

.button {
  margin: 10px;
}

.apm1 {
  width: 80%;
  height: 18%;
  z-index: 1;
  top: 10%;
  left: 8%;
  position: relative;
}

.apm2 {
  width: 80%;
  height: 15%;
  z-index: 1;
  top: 7%;
  left: 2%;
  position: relative;
}

.apm3 {
  width: 80%;
  height: 13%;
  z-index: 1;
  position: relative;
  top: 5%;
  left: 6%;
  transform: scale(0.95);
}

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  filter: opacity(80%);
}

.stick {
  z-index: -1;
  height: 85%;
  width: 30%;
  position: absolute;
  left: 27%;
  top: 50px;
}
